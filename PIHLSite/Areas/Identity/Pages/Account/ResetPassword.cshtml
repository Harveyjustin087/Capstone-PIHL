@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}
<div class="col-md-10 offset-md-1">
    <h1>Password Reset</h1>
    <p>Enter your new Password Below and Submit</p>
    <section>
        <form method="post" asp-controller="Mail" asp-action="ResetPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reset.Email"></label>
                <input asp-for="Reset.Email" class="form-control" type="email" name="Email" />
                <span asp-validation-for="Reset.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reset.Password"></label>
                <input asp-for="Reset.Password" class="form-control" type="password" name="Password" />
                <span asp-validation-for="Reset.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reset.ConfirmPassword"></label>
                <input asp-for="Reset.ConfirmPassword" class="form-control" type="password" name="ConfirmPassword" />
                <span asp-validation-for="Reset.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Reset</button>
            </div>
        </form>
    </section>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}
