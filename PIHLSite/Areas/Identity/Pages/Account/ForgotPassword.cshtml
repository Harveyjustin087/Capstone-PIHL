@page
@model PIHLSite.Models.MailRequest;
@{
    ViewData["Title"] = "ForgotPassword";
                    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml"; 
}
<div class="col-md-10 offset-md-1">
    <h1>Forgot Your Password?</h1>
    <p>Enter your email below to reset password</p>
    <section>
        <form method="post" asp-controller="Mail" asp-action="SendMail">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToEmail"></label>
                <input asp-for="ToEmail" class="form-control" type="email" name="ToEmail"/>
                <span asp-validation-for="ToEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send Reset</button>
            </div>
        </form>
        </section>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}
