@model PIHLSite.Models.Game

@{
    ViewData["Title"] = "Create";
}
<div class="bg-white border border-primary rounded">
    <h1>Create A Game Record</h1>
    <hr />
    <form asp-action="Create">
        <div class="row">
            <div class="mx-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GameDate" class="control-label"></label>
                    <input asp-for="GameDate" class="form-control" value="@DateTime.Now" />
                    <span asp-validation-for="GameDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeScoreTotal" class="control-label"></label>
                    <input asp-for="HomeScoreTotal" class="form-control" value="0" readonly />
                    <span asp-validation-for="HomeScoreTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwayScoreTotal" class="control-label"></label>
                    <input asp-for="AwayScoreTotal" class="form-control" value="0" readonly />
                    <span asp-validation-for="AwayScoreTotal" class="text-danger"></span>
                </div>
                <p>Please Assign A Team By their Number as follows: </p>
                <p>1 - Green, 2 - Orange, 3 - Red, 4- Blue, 5 - Black, 6 - Yellow</p>
                <div class="form-group">
                    <label asp-for="AwayTeamId" class="control-label"></label>
                    <input asp-for="AwayTeamId" class="form-control" />
                    <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeTeamId" class="control-label"></label>
                    <input asp-for="HomeTeamId" class="form-control" />
                    <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group mx-auto">
                <label asp-for="Finalized" class="control-label"></label>
                <input asp-for="Finalized" class="form-control" value="false" readonly />
                <span asp-validation-for="Finalized" class="text-danger"></span>
            </div>
            <div class="form-group mx-auto ml-1">
                <label asp-for="Overtime" class="control-label"></label>
                <input asp-for="Overtime" class="form-control" value="false" readonly />
                <span asp-validation-for="Overtime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}