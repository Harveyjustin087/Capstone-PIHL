@model IEnumerable<PIHLSite.Models.Season>

@{
    ViewData["Title"] = "Index";
}
<div class="bg-white border border-primary rounded">
    <h1>Seasons</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndYear)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndYear)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SeasonId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.SeasonId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.SeasonId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>