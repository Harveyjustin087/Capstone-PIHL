@model PIHLSite.Models.GoalRecord

@{
    ViewData["Title"] = "Details";
}
<div class="bg-white border border-primary rounded">
    <h1>Goal Details</h1>

    <div>
        <h4>GoalRecord</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Period)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Period)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstAssistPlayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstAssistPlayer.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.GameId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ScoringPlayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScoringPlayer.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SecondAssistPlayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SecondAssistPlayer.FirstName)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.GoalRecordId">Edit</a> |
        <a asp-action="Index" asp-controller="Scorekeeper">Back to List</a>
    </div>
</div>