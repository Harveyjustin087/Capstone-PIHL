@model PIHLSite.Models.GoalRecord

@{
    ViewData["Title"] = "Edit";
}
<div class="bg-white border border-primary rounded">
    <h1>Edit A Goal</h1>

    <h4>GoalRecord</h4>
    <hr />
    <div class="row">
        <div class="mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="GoalRecordId" />
                <div class="form-group">
                    <label asp-for="GameId" class="control-label" hidden></label>
                    <input type="hidden" asp-for="GameId" value="@ViewBag.GameId" />
                </div>
                <div class="form-group">
                    <label asp-for="ScoringPlayerId" class="control-label" hidden></label>
                    <input asp-for="ScoringPlayerId" class="form-control" asp-items="ViewBag.ScoringPlayerId" type="hidden"/>
                </div>
                <div class="form-group">
                    <label asp-for="FirstAssistPlayerId" class="control-label" hidden></label>
                    <input asp-for="FirstAssistPlayerId" class="form-control" asp-items="ViewBag.FirstAssistPlayerId" type="hidden"/>
                </div>
                <div class="form-group">
                    <label asp-for="SecondAssistPlayerId" class="control-label" hidden></label>
                    <input asp-for="SecondAssistPlayerId" class="form-control" asp-items="ViewBag.SecondAssistPlayerId" type="hidden"/>
                </div>
                <div class="form-group">
                    <label asp-for="Period" class="control-label"></label>
                    <input asp-for="Period" class="form-control" />
                    <span asp-validation-for="Period" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameTime" class="control-label"></label>
                    <input asp-for="GameTime" class="form-control" />
                    <span asp-validation-for="GameTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Scorekeeper" asp-action="Index">Back to List</a>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
