@model PIHLSite.Models.GoalRecord

@{
    ViewData["Title"] = "Delete";
}
<div class="bg-white border border-primary rounded">
    <h1>Delete A Goal</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>GoalRecord</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Period)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Period)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstAssistPlayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstAssistPlayer.FirstName) @Html.DisplayFor(model => model.FirstAssistPlayer.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.GameId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ScoringPlayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScoringPlayer.FirstName) @Html.DisplayFor(model => model.ScoringPlayer.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SecondAssistPlayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SecondAssistPlayer.FirstName) @Html.DisplayFor(model => model.SecondAssistPlayer.LastName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="GoalRecordId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>